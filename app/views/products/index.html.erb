<!-- Adds "Admin View" to the side of title if Admin -->
<h4>All Products
  <small>
    <% if current_user && current_user.admin? %>
    Admin View
    <% end %>
  </small>
</h4>

<div class="container">

  <div class="row">
    <div class="col-md-6">
      <% @products.each do |product| %>
        <p>Name: <%= product.name %></p>
        Price: <%= number_to_currency product.unit_price_in_cents/100 %>
        <%= link_to "Add to cart!", line_items_path(line_item: { product_id: product.id, quantity: 1, total_sale_price_in_cents: product.unit_price_in_cents}), method: :post, class: "btn" %>
      <% end %>
    </div>

    <div class="col-md-6">
      <% if !current_cart.line_items.empty? %>
        <%= render partial: "/carts/show" %>
      <% end %>
    </div>
  </div>
</div>
