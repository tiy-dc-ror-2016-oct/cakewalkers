<h4>All Products</h4>

<div>
  <% if current_user && current_user.admin? %>
    <%= link_to "Admin: Edit Viewable Products", products_path %>
  <% end %>
</div>

<%= render partial: "/carts/show" %>
<br />
<%= link_to "Checkout", new_order_path %>
<br />
<% @products.each do |product| %>
  <% if product.for_sale == true %>
    <p>Name: <%= product.name %></p>
    <% if product.unit_price_in_cents %>
      <p>
        Price: <%= product.unit_price_in_cents/100%>
      </p>
    <% end %>

    <%= link_to "Add to cart!", line_items_path(line_item: { product_id: product.id, quantity: 1, total_sale_price_in_cents: product.unit_price_in_cents}), method: :post, class: "btn" %>
    <hr>
  <% end %>
<% end %>

<% if @cart %>
  <% @cart.each do |item| %>
    <%= item.name %>
    <p>
      Price: <%= item.unit_price_in_cents/100%>
    </p>
  <% end %>
<% end %>
