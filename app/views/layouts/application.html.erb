<!DOCTYPE html>

<html>
  <head>
    <title>Cakewalkers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
        <ul class="nav navbar-nav">
          <% if current_user %>
            <p class="navbar-text navbar-right">Signed in as <%= current_user.full_name %></p>
            <li><%= link_to "Log out", session_path, method: :delete %></li>
            <li><%= link_to "View Profile", client_path, method: :show %></li>
          <% else %>
            <li><%= link_to "Log In", new_session_path %></li>
            <li><%= link_to "Sign Up!", new_client_path %></li>
          <% end %>
        </ul>
    </div>
    <%= yield %>
  </body>
</html>
