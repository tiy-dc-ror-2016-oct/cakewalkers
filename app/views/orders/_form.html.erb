<%= form_for order do |f| %>

  <div class="form-group">
    <%= f.label :full_name, class: "control-label" %>
    <%= f.text_field :full_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "control-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <br />

  <h4> Delivery Information </h4>

  <%= f.fields_for :delivery_address do |ff| %>
    <div class="form-group">
      <%= ff.label :contact_phone, class: "control-label" %>
      <%= ff.phone_field :contact_phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :street, class: "control-label" %>
      <%= ff.text_field :street, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :city, class: "control-label" %>
      <%= ff.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :state, class: "control-label" %>
      <%= ff.text_field :state, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :zip_code, class: "control-label" %>
      <%= ff.text_field :zip_code, class: "form-control" %>
    </div>
  <% end %>
  <br />

  <h4> Billing Information </h4>

  <%= f.fields_for :billing_address do |ff| %>
    <div class="form-group">
      <%= ff.label :street, class: "control-label" %>
      <%= ff.text_field :street, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :city, class: "control-label" %>
      <%= ff.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :state, class: "control-label" %>
      <%= ff.text_field :state, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :zip_code, class: "control-label" %>
      <%= ff.text_field :zip_code, class: "form-control" %>
    </div>
  <% end %>

  <br />

  <%= f.fields_for :credit_card do |ff| %>
    <div class="form-group">
      <%= ff.label :name_on_card, class: "control-label" %>
      <%= ff.text_field :name_on_card, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :kind, class: "control-label" %>
      <%= ff.text_field :kind, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :number, class: "control-label" %>
      <%= ff.text_field :number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :expiration_month, class: "control-label" %>
      <%= ff.text_field :expiration_month, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :expiration_year, class: "control-label" %>
      <%= ff.text_field :expiration_year, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :security_code, class: "control-label" %>
      <%= ff.text_field :security_code, class: "form-control" %>
    </div>
  <% end %>

  <%= f.submit "Submit", class: "btn btn-default" %>

<% end %>
