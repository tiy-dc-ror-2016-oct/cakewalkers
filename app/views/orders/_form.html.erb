<%= form_for order do |f| %>

  <div class="form-group">
    <%= f.label :full_name, class: "control-label" %>
    <%= f.text_field :full_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "control-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone, class: "control-label" %>
    <%= f.phone_field :phone, class: "form-control" %>
  </div>

  <br />

  <h4> Delivery Address </h4>

  <%= f.fields_for :delivery_address do |ff| %>
    <div class="form-group">
      <%= ff.label :street, class: "control-label" %>
      <%= ff.text_field :street, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :city, class: "control-label" %>
      <%= ff.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :state, class: "control-label" %>
      <%= ff.text_field :state, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :zip, class: "control-label" %>
      <%= ff.text_field :zip, class: "form-control" %>
    </div>
  <% end %>
  <br />

  <h4> Billing Address </h4>
  
  <%= f.fields_for :billing_address do |ff| %>
    <div class="form-group">
      <%= ff.label :street, class: "control-label" %>
      <%= ff.text_field :street, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :city, class: "control-label" %>
      <%= ff.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :state, class: "control-label" %>
      <%= ff.text_field :state, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :zip, class: "control-label" %>
      <%= ff.text_field :zip, class: "form-control" %>
    </div>
  <% end %>

  <br />

  <div class="form-group">
    <%= f.label :credit_card_number, class: "control-label" %>
    <%= f.text_field :credit_card_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cc_expiration, class: "control-label" %>
    <%= f.date_field :cc_expiration, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cc_code, class: "control-label" %>
    <%= f.text_field :cc_code, class: "form-control" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-default" %>

<% end %>
