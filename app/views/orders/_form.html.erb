<%= form_for order do |f| %>

  <%= f.fields_for :client do |ff| %>
    <div class="form-group">
      <%= ff.label :full_name, class: "control-label" %>
      <%= ff.text_field :full_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :email, class: "control-label" %>
      <%= ff.email_field :email, class: "form-control" %>
    </div>

  <br />

    <h4> Delivery Information </h4>

    <%= ff.fields_for :address do |fff| %>
      <div class="form-group">
        <%= fff.label :contact_phone, class: "control-label" %>
        <%= fff.phone_field :contact_phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= fff.label :street, class: "control-label" %>
        <%= fff.text_field :street, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= fff.label :city, class: "control-label" %>
        <%= fff.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= fff.label :state, class: "control-label" %>
        <%= fff.text_field :state, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= fff.label :zip_code, class: "control-label" %>
        <%= fff.text_field :zip_code, class: "form-control" %>
      </div>
    <% end %>
  <% end %>
  <br />

  <h4> Billing Information </h4>

  <%= f.fields_for :credit_card do |ff| %>
    <div class="form-group">
      <%= ff.label :name_on_card, class: "control-label" %>
      <%= ff.text_field :name_on_card, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :kind, class: "control-label" %>
      <%= ff.text_field :kind, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :number, class: "control-label" %>
      <%= ff.text_field :number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :expiration_month, class: "control-label" %>
      <%= ff.text_field :expiration_month, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :expiration_year, class: "control-label" %>
      <%= ff.text_field :expiration_year, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= ff.label :security_code, class: "control-label" %>
      <%= ff.text_field :security_code, class: "form-control" %>
    </div>

    <br />
    <%= ff.fields_for :billing_address do |fff| %>
      <div class="form-group">
        <%= fff.label :contact_phone, class: "control-label" %>
        <%= fff.phone_field :contact_phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= fff.label :street, class: "control-label" %>
        <%= fff.text_field :street, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= fff.label :city, class: "control-label" %>
        <%= fff.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= fff.label :state, class: "control-label" %>
        <%= fff.text_field :state, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= fff.label :zip_code, class: "control-label" %>
        <%= fff.text_field :zip_code, class: "form-control" %>
      </div>
    <% end %>

  <% end %>

  <%= f.submit "Submit", class: "btn btn-default" %>

<% end %>
