<div>
  <div id="sidebar">
    <h2>Your Cart</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>
            Product
          </th>
          <th>
            Quantity
          </th>
          <th>
            Price
          </th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.grouped_line_items.each do |product, line_items| %>
          <tr>
            <td>
              <%= product.name %>
            </td>
            <td>
              <%= line_items.size %>
            </td>
            <td>
              <%= number_to_currency line_items.sum {|line_item| line_item.total_sale_price_in_cents.to_i / 100 } %>
            </td>
            <td id="remove">
              <%= link_to "Remove", line_item_path(line_items.first.id), method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <p>Total: <%= number_to_currency current_cart.total %></p>
    <p><%= link_to "Clear Cart", cart_path, method: :delete, class: "btn btn-danger" %>
    <%= link_to "Checkout", new_order_path, class: "btn btn-primary" %></p>

  </div>
</div>
